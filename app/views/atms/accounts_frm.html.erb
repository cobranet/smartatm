<% content_for :main do %>
<h2> Accounts </h2>

<%= form_tag("/atms/accounts", method: "get", class: "form-horizontal") do %>
<div class="form-group">
    <%= label_tag :account_type, "Account type" , class: "control-label col-xs-2" %>
  <div class="col-xs-3" %>
    <%= select_tag :account_type, options_for_select(Atms.account_types),class: "form-control" %>
  </div>
    <%= label_tag :client, "Client" , class: "control-label col-xs-1" %>
  <div class="col-xs-2" %>
    <%= text_field_tag :client,session[:clientId],class: "form-control" %>
  </div>
  
  <div class="col-xs-4" %>
    <%= submit_tag "OK",class:"btn btn-primary btn-large" %>
  </div>

</div>

<% end %>
<% end %>
