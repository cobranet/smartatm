<% content_for :main do %>
  <%= form_tag("/atms/reservewithfee", method: "post" , class: "form-horizontal") do %>

<div class="form-group">
  <%= label_tag :sourceAccount, "Račun nalogodavca" , class: "control-label col-xs-1" %>
  <div class="col-xs-3" %>
    <%= text_field_tag :sourceAccount,"567000000000178865",class: "form-control" %>
  </div>

   <%= label_tag :sourceCurrency, "Valuta nalogodavca" , class: "control-label col-xs-1" %>
  <div class="col-xs-1" %>
    <%= text_field_tag :sourceCurrency,nil,class: "form-control" %>
  </div>

  <%= label_tag :amount, "Amount" , class: "control-label col-xs-2" %>
  <div class="col-xs-4" %>
    <%= text_field_tag :amount,nil,class: "form-control" %>
  </div>
  
</div>
<div class="form-group">
   <%= label_tag :destinationAccount, "Račun korisnika" , class: "control-label col-xs-1" %>
  <div class="col-xs-3" %>
    <%= text_field_tag :destinationAccount,session["intpay"]["destinationAccount"],class: "form-control" %>
  </div>
   <%= label_tag :destinationCurrency, "Valuta korisnika" , class: "control-label col-xs-1" %>
  <div class="col-xs-1" %>
    <%= text_field_tag :destinationCurrency,nil,class: "form-control" %>
  </div>  
</div>



<div class="form-group">
  <%= label_tag :transactionType, "Tip transakcije" , class: "control-label col-xs-1" %>
  <div class="col-xs-3" %>
    <%= select_tag :transactionType, options_for_select(Atms.transaction_types),class: "form-control" %>
  </div>
  <%= label_tag :currencyDate, "Currency Date" , class: "control-label col-xs-1" %>
  <div class="col-xs-3" %>
    <%= text_field_tag :currencyDate,nil, class: " datepick form-control", "data-provide": "datepicker" %>
  </div>

 <%= label_tag :urgency, "Urgency" , class: "control-label col-xs-1" %>
  <div class="col-xs-1" %>
    <%= select_tag :urgency, options_for_select(["1","2"]),class: "form-control" %>
  </div>
    <div class="col-xs-2" %>
    <%= submit_tag "OK",class:"btn btn-primary"  %>
    </div>


<% end %>
<% end %>
